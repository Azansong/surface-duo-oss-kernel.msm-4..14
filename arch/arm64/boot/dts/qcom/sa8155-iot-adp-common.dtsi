&reserved_memory {
	cdsp_sensor_mem: cdsp_sensor_region {
		compatible = "shared-dma-pool";
		alloc-ranges = <0x0 0x00000000 0x0 0xffffffff>;
		reusable;
		alignment = <0x0 0x400000>;
		size = <0x0 0x30000000>;
	};
};

&ion {
	qcom,ion-heap@11 { /* CDSP_SENSOR HEAP */
		reg = <11>;
		memory-region = <&cdsp_sensor_mem>;
		qcom,ion-heap-type = "DMA";
	};
};
